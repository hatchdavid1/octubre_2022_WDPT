<div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>

      <p class="card-text">{{description}}</p>

      {{#if isCompleted}}
        <p>Terminada</p>
    {{else}}
        <form 
        action="/task/{{_id}}/complete"
        method="post">
            <button type="submit" class="btn btn-success">Marcar como completada</button>
        </form>
    {{/if}}
      <a href="/task/{{_id}}/edit" class="card-link">editar link</a>
      <a href="/task/{{_id}}/delete" class="card-link">eliminar link</a>
    </div>
</div>
